{{! This template displays a post in its entirety.
    It is used to display the latest post in the index, and any single post }}
<article class="hentry clearfix {{post_class}}" role="article">

    <header class="article-header">

        <div class="article-header-title">
            <h1 class="h2">
                <a href="/{{slug}}" rel="bookmark" title="{{title}}">{{title}}</a>
            </h1>
        </div>

        <p class="byline vcard">
            Posted
            <time class="updated"
                  datetime="{{date published_at format='YYYY-MM-DD'}}"
                  pubdate="">
                {{date published_at format='YYYY-MM-DD'}}
            </time>

            by
            <span class="author">
                {{author}}
            </span>

            {{#if tags}}
                & filed under
                {{#each tags}}
                    <!-- Tag Links are not quite ready yet.
                           <a href="/tags/{{this.name}}"
                           class="tag-label"
                           title="View all posts in {{this.name}}"
                           rel="category">{{this.name}}</a>
                           -->
                    {{! Use the span below to display tags as plain text until tag links are ready }}
                    <span class="tag-label">{{this.name}}</span>
                {{/each}}

            {{/if}}
        </p>

        {{! Featured images are not yet implemented in Ghost.
            But when they are, this will be awesome. }}
        {{#if image}}
            <figure class="featured-image">
                <img src="/content/images/{{image}}" class="attachment-post-thumbnail" alt="">
            </figure>
        {{/if}}
    </header> <!-- end article header -->

    <section class="entry-content clearfix">
        {{content}}
    </section> <!-- end article section -->

    <footer class="article-footer">
        {{#if tags}}
            <p class="tags">
                <span class="tags-title">
                    Tags:
                    {{#each tags}}
                        <!-- Tag Links are not quite ready yet.
                           <a href="/tags/{{this.name}}"
                           class="tag-label"
                           title="View all posts in {{this.name}}"
                           rel="category">{{this.name}}</a>
                           -->
                        {{! Use the span below to display tags as plain text until tag links are ready }}
                        <span class="tag-label">{{this.name}}</span>
                    {{/each}}
                </span>
            </p>
        {{/if}}

        <div class="share-post">
      
            <ul class="share-buttons">
                {{! Get unicode values from http://drinchev.github.io/monosocialiconsfont/ }}

                <li>
                    <a href="https://twitter.com/intent/tweet?url={{url absolute="true"}}&amp;related=alarobric&amp;via=alarobric&amp;text=“{{encode title}}” by {{author.name}}" data-lang="en" class="symbol twitter" title='Twitter'>&#xe286
                    </a>
                </li>
            
                <li>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" data-lang="en" target="_blank" class="symbol facebook" title='Facebook'>&#xe227
                    </a>
                </li>
                
                <li>
                    <a href="http://www.pinterest.com/pin/create/link/?url={{url absolute="true"}}&amp;q=92&amp;description=“{{encode title}}” by {{author.name}}" data-lang="en" target="_blank" class="symbol pinterest" title='Pinterest'>&#xe264
                    </a>
                </li> 
                
                <li>
                    <a href="https://plus.google.com/share?url={{url absolute="true"}}" data-lang="en" target="_blank" class="symbol google-plus" title='Google Plus'>&#xe239
                    </a>
                </li>           
              
            </ul>      

        </div>

        <div class="author-post">
            <div class="author-image">
                <img src="{{author.image}}" title="author pic"/>
            </div>
            <div>
                <header class="h4">{{author.name}}</header>
                <p>{{author.bio}}</p>
                <p>{{author.location}}</p>
            </div>
        </div>

        <a href="#" class="back-to-the-top">Back to the top</a>

    </footer> <!-- end article footer -->

</article>